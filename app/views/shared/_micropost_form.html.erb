<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", data: { input_length_count: "1" } %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  <div id="micropostCharacterCountdown">
    140 characters remaining...
  </div>
<% end %>
